# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.vue]
indent_size = 2

[*.scss]
indent_size = 2

[*.rb]
indent_size = 2

[*.html.erb]
indent_size = 2

[*.blade.php]
indent_size = 2
